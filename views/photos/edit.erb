<div class="members form">
	<h1>Edit <%= @photo.title %>'s Information</h1>
		<form action="/photos/<%= @photo.id %>" method="POST" class="edit">
		<input type="hidden" name="_method" value="PUT">
			<h2>Please edit the appropriate fields below</h2>
				<label for="title">Title:</label>
					<input type="text" name="photo[title]" value="<%= @photo.title %>"><br>
				<label for="url">Image:</label>
					<input type="text" name="photo[img_url]" value="<%= @photo.img_url %>"><br>
				<label for="location">Location of Photo:</label>
					<input type="text" name="photo[location]" value="<%= @photo.location %>"><br>
				<label for="caption">Caption:</label>
					<input type="textarea" name="photo[caption]" value="<%= @photo.caption %>"><br>
					

					<input type="hidden" name="photo[updated_at]" value="<%= @photo.updated_at %>"><br>
	    
	     <!-- MENU OF MEMBERS -->
					<label>Choose a Member<br>
							<select name="photo[member_id]">
								<% @member.each do |member| %>				
									<option <%= "selected" if member == @photo.member %> value="<%= member.id %>"><%= member.owner %></option>
								<% end %>
							</select>
					</label>

			<input type="submit" name="submit" class="button">
		</form>
</div>

<!-- photos table column headers -->
	<!-- id | title  |  img_url  |  location |  created_at  |  caption  | member_id -->
